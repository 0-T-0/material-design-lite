{
  "private": true,
  "description": "Material Design Lite",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "clean": "del-cli build/**",
    "build": "mkdirp build && webpack",
    "build:min": "mkdirp build && cross-env MDL_ENV=production webpack -p",
    "dist": "npm run clean && npm run build && npm run build:min",
    "dev": "npm run clean && cross-env MDL_ENV=development webpack-dev-server --content-base demos --inline --hot",
    "lint:js": "eslint packages test webpack.config.js",
    "lint:css": "stylelint packages/**/*.scss",
    "lint": "npm-run-all --parallel lint:*",
    "fix": "eslint --fix packages test webpack.config.js",
    "postinstall": "lerna bootstrap",
    "pretest": "npm run lint",
    "test:unit": "ava",
    "test": "cross-env BABEL_ENV=test nyc npm run test:unit"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "ava": "^0.16.0",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "bel": "^4.4.3",
    "cross-env": "^2.0.0",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.1.6",
    "del-cli": "^0.2.0",
    "dom-compare": "^0.2.1",
    "dom-events": "^0.1.1",
    "eslint": "^2.12.0",
    "eslint-config-google": "^0.5.0",
    "eslint-plugin-tape": "^1.1.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "ghooks": "^1.3.2",
    "isparta-loader": "^2.0.0",
    "istanbul": "^0.4.4",
    "jsdom": "^9.4.5",
    "jsdom-global": "^2.1.0",
    "json-loader": "^0.5.4",
    "karma-sourcemap-loader": "^0.3.7",
    "lerna": "2.0.0-beta.18",
    "lolex": "^1.5.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.3.0",
    "nyc": "^8.1.0",
    "postcss-loader": "^0.9.1",
    "raf": "^3.3.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^11.0.0",
    "stylelint-scss": "^1.2.1",
    "stylelint-selector-bem-pattern": "^1.0.0",
    "tape": "^4.6.0",
    "testdouble": "^1.6.0",
    "validate-commit-msg": "^2.6.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "babel": {
    "env": {
      "test": {
        "sourceMaps": "inline"
      }
    },
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-assign"
    ]
  },
  "ava": {
    "files": [
      "test/unit/**/*.test.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register",
      "jsdom-global/register",
      "raf/polyfill"
    ]
  },
  "nyc": {
    "lines": 85,
    "statements": 85,
    "branches": 85,
    "functions": 85,
    "reporter": [
      "html",
      "text-summary"
    ],
    "check-coverage": true
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "helpMessage": "\nNOTE: Please see angular's commit message guidelines (https://github.com/angular/angular.js/blob/master/CONTRIBUTING.md#commit) for information on how to format commit messages.\n\nAs an example, here is a valid commit message: 'docs(slider): Document slider public api'\n\nIf this commit is on a development / WIP branch, you can disable this by running `git commit --no-verify`."
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
